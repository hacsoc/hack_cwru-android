<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.hacsoc.hackcwru.RegisterActivity">

    <TextView
        android:id="@+id/title"
        android:text="Tell us about yourself"
        android:textSize="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/email_textview"
        android:text="Email"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/title"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:layout_alignBottom="@+id/email_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/firstname_textview"
        android:text="First Name"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/email_textview"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/firstname_textview"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lastname_textview"
        android:text="Last Name"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/firstname_textview"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:layout_alignBottom="@+id/lastname_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/institution_textview"
        android:text="Institution"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/lastname_textview"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:layout_alignBottom="@+id/institution_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/password_textview"
        android:text="Password"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/institution_textview"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/password_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/passwordconfirm_textview"
        android:text="Confirm Pass"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/password_textview"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/confirmpass_edittext"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/passwordconfirm_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/status_textview"
        android:text="Status"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/passwordconfirm_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/hacker_radiobutton"
        android:text="Hacker"
        android:layout_alignBottom="@+id/status_textview"
        android:layout_alignLeft="@+id/confirmpass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/mentor_radiobutton"
        android:text="Mentor"
        android:layout_below="@+id/hacker_radiobutton"
        android:layout_alignLeft="@+id/confirmpass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/organizer_radiobutton"
        android:text="Organizer"
        android:layout_below="@+id/mentor_radiobutton"
        android:layout_alignLeft="@+id/confirmpass_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Register"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</RelativeLayout>
